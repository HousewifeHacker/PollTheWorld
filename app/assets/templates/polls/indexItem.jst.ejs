<td class="col-xs-4">
  <a href="#/polls/<%= poll.id %>" class="poll-link">
    <% var pollBody = poll.escape("body") %>
    <% if (pollBody.length > 40) { %>
      <%= pollBody.slice(0, 40) + '...' %>
    <% } else { %>
      <%= pollBody %>
    <% } %>
  </a>
</td>

<td class="col-xs-1"> 
  <span title="View results">
    <a href="#/polls/<%= poll.id %>/results" class="poll-result-link">
      <span class="glyphicon glyphicon-stats">
    </a>

    <%= poll.total_responses() %>
  </span>
  <% if (CURRENT_USER_ID === poll.get("user_id")) { %>
    <a type="button" class="delete-poll">
      <span title="Delete your poll" type="button" class="glyphicon glyphicon-trash btn btn-danger btn-xs">
    </a>
  <% } %>
</td>