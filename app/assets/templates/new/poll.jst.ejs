<div id="poll-container" class="col-xs-6 col-xs-offset-3">
  <a href="#" class="pull-left btn home-link">Back to Polls</a>
  <div class="clearfix"></div>
  <div id="poll-header">
    <h2>Create A Poll</h2>
  </div> <!-- end of poll header -->

  <form id="poll-new" class='form form-horizontal'>
    <div class="form-group"><!-- form-group acts as new row -->
      <label for="poll_body" class="col-xs-3 control-label">Question:</label>
      <div class="col-xs-9">
        <input type="text" id="poll_body" class="form-control" name="poll[body]" autofocus>
      </div>
    </div> <!-- end of form group -->
    <div class="form-group">
      <label class="col-xs-3 control-label choice-form-label">
        Answer Choices:
      </label>
      <div id="poll-choices" class="col-xs-9">
<!-- give each subview div class='form-group' -->
<!-- answer choices each in template ./item.jst.ejs -->
      </div>
    </div>
  </form>

  <a class="btn btn-primary submit-poll pull-left" >Submit</a>
  <a class="new-choice btn pull-right">Add Answer Choice</a>
</div>
