<form action="<%= action %>" class="auth_form" method="post" role="form">
  <input
     name="authenticity_token"
     type="hidden"
     value="<%= form_authenticity_token %>">

  <div class="form-group">
    <label for="user_username">Username</label>
    <input
      class="form-control"
      id="user_username"
      name="user[username]"
      type="text">
  </div>

  <div class="form-group">
    <label for="user_password">Password</label>
    <input
      class="form-control"
      id="user_password"
      name="user[password]"
      type="password">
  </div>

  <button class="btn btn-primary submit-auth"><%= message %></button>
</form>