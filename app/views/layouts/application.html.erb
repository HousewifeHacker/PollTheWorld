<!DOCTYPE html>
<html>
<head>
  <title>PollTheWorld</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <script>
    CURRENT_USER_ID = <%= current_user.id if current_user %>
  </script>
</head>
<body data-spy="scroll" data-target=".scroll-nav">
    <!-- Top-Level Navbar -->
    <nav class="navbar navbar-default" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <button
            type="button"
            class="navbar-toggle collapsed"
            data-toggle="collapse"
            data-target="#nav-bar">
          <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
          </button>
          <a id="nav-brand" class="navbar-brand" href="#">Poll The World</a>
        </div>
        <!-- Navbar items that will collapse into a button w/ narrow widths -->
        <div class="collapse navbar-collapse" id="nav-bar">
          <ul id="top-nav-bar" class="nav navbar-nav">
            <li id="nav-unanswered"><a href="#">Answer Polls</a></li>
            <li id="nav-owned"><a href="/#/polls/new">Get Answers</a></li>
	    <li id="nav-answered"><a href="/#/polls/answered">Your Answers</a></li>
          </ul>
          <!-- Sign In Dropdown - still part of Navbar -->
            <% if signed_in? %>
              <%= link_to "Sign Out", session_url, method: :delete, class: "btn btn-primary pull-right" %>
            <% else %>
            <div class="pull-right">
              <button 
                class="btn btn-primary"
                type="button"
                data-toggle="dropdown">
                Not Signed In?
                <span class="caret"></span>
              </button>
            <ul class="dropdown-menu">
              <!-- <li><a href="javascript:void(0)" id="contact-link"> -->
              <li><%= link_to "Sign in", new_session_url %></li>
              <li><%= link_to "Sign up", new_user_url %></li>
            </ul>
            </div>
            <% end %>
          
        </div>
      </div>
    </nav>
    
    <!-- Flash Notices -->
    <% if flash[:errors] %>
    <div class="alert alert-danger" role="alert">
      <h3>Please fix the following errors:</h3>
      <ul>
        <% flash[:errors].each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
    <% end %>


    <!-- Need to wrap yielded view in a container div -->
    <div class="container">
      <%= yield %>
    </div>
    
    
    <!-- <div class="modal fade" id="signIn-modal">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title">Sign In</h4>
          </div>
          <div class="modal-body">
            <%=
              render "users/form",
              action: session_url,
              message: "Log In"
            %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div><!-- /.modal-content -->
      <!-- </div> --><!-- /.modal-dialog -->
    <!-- </div> --><!-- /.modal -->

  </body>

</html>
